{
    "$schema": "https://github.com/Azure/data-api-builder/releases/latest/download/dab.draft.schema.json",
    "data-source": {
      "database-type": "mysql",
      "options": {
        "set-session-context": false 
      },
      "connection-string": "@env('DATABASE_CONNECTION_STRING')"
    },
    "runtime": {
      "rest": {
        "enabled": true,
        "path": "/rest"
      },
      "graphql": {
        "allow-introspection": true,
        "enabled": true,
        "path": "/graphql"
      },
      "host": {
        "mode": "production",
        "cors": {
          "origins": ["https://brave-cliff-09a17e30f.6.azurestaticapps.net"],
          "allow-credentials": false
        },
        "authentication": {
          "provider": "StaticWebApps"
        }
      }
    },
    "entities": {
      "city_walkability_data": {
        "source": "authdb.city_walkability_data",
        "permissions": [
          {
            "actions": ["create", "read", "update", "delete"],
            "role": "anonymous"
          }
        ]
      },
      "gazetteer": {
        "source": "authdb.gazetteer",
        "permissions": [
          {
            "actions": ["read"],
            "role": "anonymous"
          },
          {
            "actions": ["create", "update", "delete"],
            "role": "authenticated"
          }
        ]
      },
      "users": {
        "source": "authdb.users",
        "permissions": [
          {
            "actions": ["read"],
            "role": "anonymous"
          },
          {
            "actions": ["create", "update", "delete"],
            "role": "authenticated"
          }
        ]
      },
      "walkability_index_processed": {
        "source": "authdbusername.walkability_index_processed",
        "permissions": [
          {
            "actions": ["read"],
            "role": "anonymous"
          },
          {
            "actions": ["create", "update", "delete"],
            "role": "authenticated"
          }
        ]
      }
    }
  }